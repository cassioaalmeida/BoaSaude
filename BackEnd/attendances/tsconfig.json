{
   "compilerOptions": {
       "module": "commonjs",
       "esModuleInterop": true,
       "target": "es6",
       "noImplicitAny": true,
       "noImplicitThis": false,
       "moduleResolution": "node",
       "experimentalDecorators": true,
       "emitDecoratorMetadata": true,
       "resolveJsonModule": true,
       "sourceMap": true,
       "outDir": "./dist",
       "rootDir": "./src",
       "baseUrl": ".",
       "paths": {
           "*": [
               "node_modules/*"
           ]
       }
   },
   "typeRoots": ["src/global.d.ts" ],
   "include": [
       "src/**/*"
   ],
   "exclude": ["node_modules"]
 }